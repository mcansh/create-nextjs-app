{
  "name": "app",
  "version": "1.0.0",
  "main": "n/a",
  "repository": "mcansh/next-boilerplate",
  "author": "Logan McAnsh <logan@mcan.sh> (https://mcan.sh)",
  "license": "MIT",
  "private": true,
  "engines": {
    "node": ">=10"
  },
  "scripts": {
    "dev": "next dev -p 4000",
    "build": "next build",
    "start": "next start",
    "type-check": "tsc",
    "lint": "eslint ./ --ext .js,.ts,.tsx",
    "lint:css": "stylelint './**/*.js' './**/*.jsx' './**/*.tsx' './**/*.ts'",
    "test": "jest",
    "format": "prettier --write \"**/*.+(js|jsx|json|yml|yaml|css|less|scss|ts|tsx|md|graphql|mdx)\"",
    "validate": "npm-run-all --parallel lint lint:css format type-check test"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "sh scripts/ts-precommit.bash",
      "yarn lint:css",
      "git add"
    ]
  },
  "dependencies": {
    "@sentry/browser": "5.7.0",
    "@sentry/node": "5.7.0",
    "next": "9.1.1",
    "next-offline": "4.0.6",
    "next-server": "9.0.5",
    "react": "16.10.2",
    "react-dom": "16.10.2",
    "styled-components": "4.4.0",
    "type-fest": "0.8.1"
  },
  "devDependencies": {
    "@mcansh/eslint-config": "2.4.0",
    "@testing-library/jest-dom": "4.1.2",
    "@testing-library/react": "9.3.0",
    "@types/jest": "24.0.18",
    "@types/node": "12.7.12",
    "@types/react": "16.9.5",
    "@types/react-dom": "16.9.1",
    "@types/styled-components": "4.1.19",
    "@typescript-eslint/eslint-plugin": "2.3.3",
    "@typescript-eslint/parser": "2.3.3",
    "@zeit/next-source-maps": "0.0.4-canary.1",
    "babel-plugin-styled-components": "1.10.6",
    "eslint": "6.5.1",
    "eslint-config-airbnb": "18.0.1",
    "eslint-config-kentcdodds": "14.5.0",
    "eslint-config-prettier": "6.4.0",
    "eslint-import-resolver-typescript": "2.0.0",
    "eslint-plugin-import": "2.18.2",
    "eslint-plugin-prettier": "3.1.1",
    "eslint-plugin-you-dont-need-lodash-underscore": "6.8.0",
    "husky": "3.0.8",
    "jest": "24.9.0",
    "lint-staged": "9.4.2",
    "npm-run-all": "4.1.5",
    "prettier": "1.18.2",
    "stylelint": "11.1.1",
    "stylelint-config-prettier": "6.0.0",
    "stylelint-config-recommended": "3.0.0",
    "stylelint-config-styled-components": "0.1.1",
    "stylelint-prettier": "1.1.1",
    "typescript": "3.6.4"
  }
}
